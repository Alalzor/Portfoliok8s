<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 fade-in">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Core Skills</h2>
