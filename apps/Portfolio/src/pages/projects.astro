---
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.astro';
---

<Layout>
  <main class="min-h-screen bg-gradient-to-b from-orange-900 to-orange-950 py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-12 text-center">
        My Projects
      </h1>
      <p class="text-center text-orange-200 mb-12 max-w-2xl mx-auto">
        A selection of projects demonstrating my skills in systems administration,
        automation and infrastructure management
      </p>
      <Projects />
    </div>
  </main>
</Layout>
